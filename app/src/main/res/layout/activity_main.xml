<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/view_binding_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Binding"
        style="@style/OptionButton"
        android:backgroundTint="#009688"
        app:layout_constraintBottom_toTopOf="@id/find_view_by_id_option"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/find_view_by_id_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find View By Id"
        style="@style/OptionButton"
        android:backgroundTint="#3EBDB1"
        app:layout_constraintBottom_toTopOf="@id/synthetic_option"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/synthetic_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Synthetic"
        style="@style/OptionButton"
        android:backgroundTint="#71DDD3"
        app:layout_constraintBottom_toTopOf="@id/jetpack_compose_option"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/jetpack_compose_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jetpack Compose"
        style="@style/OptionButton"
        android:backgroundTint="#B4E1DD"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>