<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindViewByIdActivity">

    <TextView
        android:id="@+id/find_view_by_id_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Hola mundo"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/find_view_by_id_input_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Hola mundo"
        app:layout_constraintTop_toBottomOf="@id/find_view_by_id_text" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/find_view_by_id_button"
        style="@style/OptionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#009688"
        android:text="Update"
        app:layout_constraintTop_toBottomOf="@id/find_view_by_id_input_text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/find_view_by_id_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/find_view_by_id_button" />
</androidx.constraintlayout.widget.ConstraintLayout>